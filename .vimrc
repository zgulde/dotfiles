syntax on

let mapleader = " "

map <Leader>c :noh<cr>
map <Leader>1 :set background=light<cr>
map <Leader>2 :set background=dark<cr>

map <C-j> :m .+1<cr>
map <C-k> :m .-2<cr>

set number
set ruler
set cmdheight=2
set hlsearch
set incsearch
set background=light
set expandtab
set smarttab
set tabstop=4
set shiftwidth=4
set softtabstop=4
set ai
set si
set colorcolumn=80,100

colorscheme solarized
